
  <% if @recette.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@recette.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @recette.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
  </div>
